//- Header Template
include ./assets/templates/header.pug

main.main-section
  include ./assets/templates/modals/cart.pug
  include ./assets/templates/modals/pay.pug
  .container
    .row
      .col.s12
        #product.product.background
          .product-content
            .product-breadcrumb
              #breadcrumb.breadcrumb
                ul
                  li
                    a(href='/') Главная
                  li
                    a#breadcrumbBtn(href='/' data-category=category.toLowerCase()) #{category}
                  li #{title}
              hr
            .product-title.block-title
              h1 #{title}
                br
                small(style="font-size: 12px") Дата добавления: #{date.toLocaleDateString()}
            #carouselExampleFade.carousel.slide.slide(data-ride='carousel')
              .carousel-inner
                .carousel-item.active
                  if typeof(img) != 'undefined'
                    img.d-block.w-100(src='../img/product-img/' + img[0] alt='First slide')
                each task in img!=undefined?img:0
                  .carousel-item
                    img.d-block.w-100(src='../img/product-img/' +task alt='First slide')
              a.carousel-control-prev(href='#carouselExampleFade' role='button' data-slide='prev')
                span.carousel-control-prev-icon(aria-hidden='true')
                span.sr-only Previous
              a.carousel-control-next(href='#carouselExampleFade' role='button' data-slide='next')
                span.carousel-control-next-icon(aria-hidden='true')
                span.sr-only Next
            -var afgb = "В сложенном состоянии: 180×97×77 мм (длина × ширина × высота) <br> В разложенном состоянии: 183×253×77 мм (длина × ширина × высота) \n В разложенном состоянии: 183×253×77 мм (длина × ширина × высота)"
